<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

    <TextView
            android:id="@+id/kmperlitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewNomePosto"
            android:layout_marginLeft="158dp"
            android:layout_marginStart="158dp"
            android:text="KM/L"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="1dp"/>

    <TextView
            android:id="@+id/textkmperlitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewNomePosto"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:text="KM/L"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="1dp"
            android:layout_toEndOf="@+id/kmperlitter" android:layout_toRightOf="@+id/kmperlitter"/>

    <TextView
            android:id="@+id/kmperprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewNomePosto"
            android:layout_marginLeft="158dp"
            android:layout_marginStart="158dp"
            android:text="$/L"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="26dp"/>

    <TextView
            android:id="@+id/textkmperprice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:text="R$/KM"
            android:textAppearance="?android:attr/textAppearanceMedium" android:layout_marginTop="25dp"
            android:layout_toEndOf="@+id/kmperprice" android:layout_toRightOf="@+id/kmperprice"
            android:layout_alignTop="@+id/textkmperlitter"/>
    <TextView
            android:text="km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/km" android:layout_marginTop="5dp"
            android:layout_below="@+id/textViewNomePosto" android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" android:layout_alignLeft="@+id/textViewNomePosto"
            android:layout_alignStart="@+id/textViewNomePosto"/>
    <TextView
            android:text="km"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/lt" android:layout_marginTop="24dp"
            android:layout_below="@+id/textViewNomePosto" android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp" android:layout_alignLeft="@+id/textViewNomePosto"
            android:layout_alignStart="@+id/textViewNomePosto"/>
    <TextView
            android:text="KM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/km2" android:layout_marginTop="0dp"
            android:layout_marginLeft="2dp"
            android:layout_marginStart="2dp"
            android:layout_toEndOf="@+id/km" android:layout_toRightOf="@+id/km" android:layout_alignTop="@+id/km"/>
    <TextView
            android:text="L"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/km4" android:layout_marginTop="19dp"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/km" android:layout_toRightOf="@+id/lt" android:layout_alignTop="@+id/km"/>
</RelativeLayout>